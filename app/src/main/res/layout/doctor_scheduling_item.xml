<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow>

            <TextView
                android:id="@+id/scheduling_date"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/border_gray_content_white2"
                android:gravity="center"
                android:text="周一\n7-25"
                android:textColor="@color/black" />

            <TableLayout
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="3">

                <TableRow
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/border_gray_content_white"
                        android:gravity="center"
                        android:text="上午"
                        android:textColor="@color/black" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:background="@drawable/border_gray_content_white"
                        android:gravity="center">

                        <Button
                            android:id="@+id/scheduling_am"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_6"
                            android:layout_marginTop="@dimen/dp_6"
                            android:background="@drawable/circular_corner_blue"
                            android:text="(5)预约"
                            android:textColor="@color/white" />
                    </RelativeLayout>
                </TableRow>

                <TableRow
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/border_gray_content_white"
                        android:gravity="center"
                        android:text="下午"
                        android:textColor="@color/black" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:background="@drawable/border_gray_content_white"
                        android:gravity="center">

                        <Button
                            android:id="@+id/scheduling_pm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_6"
                            android:layout_marginTop="@dimen/dp_6"
                            android:background="@drawable/circular_corner_blue"
                            android:text="(5)预约"
                            android:textColor="@color/white" />
                    </RelativeLayout>
                </TableRow>

            </TableLayout>

        </TableRow>
    </TableLayout>
</RelativeLayout>