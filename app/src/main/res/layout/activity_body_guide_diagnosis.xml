<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_title_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/body_type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/img_man_front" />

        <ImageView
            android:id="@+id/rotate_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:padding="12dp"
            android:src="@drawable/ic_back1" />

        <TextView
            android:id="@+id/type_man"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:background="@color/blue_100"
            android:drawableLeft="@drawable/ic_man"
            android:drawablePadding="12dp"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="4dp"
            android:text="男"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/type_woman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/type_man"
            android:background="@color/grey_54"
            android:drawableLeft="@drawable/ic_woman"
            android:drawablePadding="12dp"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="4dp"
            android:text="女"
            android:textColor="@color/white" />

        <View
            android:id="@+id/body_head"
            android:layout_width="36dp"
            android:layout_height="57dp"
            android:layout_marginLeft="159dp"
            android:layout_marginTop="57dp"
            android:background="#00000000" />

        <View
            android:id="@+id/body_bosom"
            android:layout_width="84dp"
            android:layout_height="55dp"
            android:layout_marginLeft="137dp"
            android:layout_marginTop="135dp"
            android:background="#00000000" />

        <View
            android:id="@+id/body_abdomen"
            android:layout_width="68dp"
            android:layout_height="70dp"
            android:layout_marginLeft="145dp"
            android:layout_marginTop="195dp"
            android:background="#00000000" />

        <View
            android:id="@+id/body_leg1"
            android:layout_width="34dp"
            android:layout_height="220dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="275dp"
            android:background="#00000000"
            android:rotation="10" />

        <View
            android:id="@+id/body_leg2"
            android:layout_width="34dp"
            android:layout_height="220dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="275dp"
            android:background="#00000000"
            android:rotation="-10" />

        <View
            android:id="@+id/body_arm1"
            android:layout_width="36dp"
            android:layout_height="160dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="140dp"
            android:background="#00000000"
            android:rotation="35" />

        <View
            android:id="@+id/body_arm2"
            android:layout_width="36dp"
            android:layout_height="160dp"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="140dp"
            android:background="#00000000"
            android:rotation="-35" />
    </RelativeLayout>
</LinearLayout>
