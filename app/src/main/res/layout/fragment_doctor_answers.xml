<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_title_bar" />

    <RelativeLayout
        android:id="@+id/start_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_8">

        <ImageView
            android:id="@+id/call1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/video_call" />

        <TextView
            android:id="@+id/ask_type1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_toRightOf="@+id/call1"
            android:text="视频问诊"
            android:textColor="@color/black"
            android:textSize="@dimen/subhead" />

        <TextView
            android:id="@+id/ask_describe1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ask_type1"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_toRightOf="@+id/call1"
            android:text="医生在线进行视频诊断和处方下达"
            android:textSize="@dimen/caption" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:drawablePadding="@dimen/dp_4"
            android:drawableRight="@drawable/goto_gray"
            android:gravity="center"
            android:text="未接听  23"
            android:textColor="@color/black" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/start_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_8">

        <ImageView
            android:id="@+id/call2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/describe_call" />

        <TextView
            android:id="@+id/ask_type2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_toRightOf="@+id/call2"
            android:text="问问医生"
            android:textColor="@color/black"
            android:textSize="@dimen/subhead" />

        <TextView
            android:id="@+id/ask_describe2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ask_type2"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_toRightOf="@+id/call2"
            android:text="通过图片，文字和语音和医生在线问诊"
            android:textSize="@dimen/caption" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:drawablePadding="@dimen/dp_4"
            android:drawableRight="@drawable/goto_gray"
            android:gravity="center"
            android:text="未读  25"
            android:textColor="@color/black" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/start_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_8">

        <ImageView
            android:id="@+id/call3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/phone_call" />

        <TextView
            android:id="@+id/ask_type3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_toRightOf="@+id/call3"
            android:text="电话问诊"
            android:textColor="@color/black"
            android:textSize="@dimen/subhead" />

        <TextView
            android:id="@+id/ask_describe3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ask_type3"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_toRightOf="@+id/call3"
            android:text="预约医生，和医生进行15分钟电话问诊"
            android:textSize="@dimen/caption" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:drawablePadding="@dimen/dp_4"
            android:drawableRight="@drawable/goto_gray"
            android:gravity="center"
            android:text="未接听  23"
            android:textColor="@color/black" />
    </RelativeLayout>
</LinearLayout>