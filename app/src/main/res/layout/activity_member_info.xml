<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_title_bar" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_6"
        android:layout_marginStart="@dimen/dp_6"
        android:layout_marginTop="@dimen/dp_6"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp"
        app:cardMaxElevation="4dp"
        app:contentPadding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dp_6"
                android:paddingTop="@dimen/dp_6"
                android:text="个人信息"
                android:textColor="@color/black_100"
                android:textSize="@dimen/sp_16" />

            <include layout="@layout/common_line_horizontal" />

            <TextView
                android:id="@+id/member_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_name"
                android:drawablePadding="@dimen/dp_6"
                android:gravity="center_vertical"
                android:paddingTop="@dimen/dp_8"
                android:text="姓名：  "
                android:textColor="@color/black_87" />

            <TextView
                android:id="@+id/member_sex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_sex"
                android:drawablePadding="@dimen/dp_6"
                android:gravity="center_vertical"
                android:paddingTop="@dimen/dp_8"
                android:text="性别：  "
                android:textColor="@color/black_87" />

            <TextView
                android:id="@+id/member_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_age"
                android:drawablePadding="@dimen/dp_6"
                android:gravity="center_vertical"
                android:paddingTop="@dimen/dp_8"
                android:text="年龄：  "
                android:textColor="@color/black_87" />

            <TextView
                android:id="@+id/member_relation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_relation"
                android:drawablePadding="@dimen/dp_6"
                android:gravity="center_vertical"
                android:paddingTop="@dimen/dp_8"
                android:text="关系：  "
                android:textColor="@color/black_87" />

            <TextView
                android:id="@+id/member_identity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_identity"
                android:drawablePadding="@dimen/dp_6"
                android:gravity="center_vertical"
                android:paddingTop="@dimen/dp_8"
                android:text="身份证：  "
                android:textColor="@color/black_87" />

           <!-- <TextView
                android:id="@+id/patient_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_patient_card"
                android:drawablePadding="@dimen/dp_6"
                android:gravity="center_vertical"
                android:paddingTop="@dimen/dp_8"
                android:text="就诊卡：  "
                android:textColor="@color/black_87" />-->

            <TextView
                android:id="@+id/member_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_phone"
                android:drawablePadding="@dimen/dp_6"
                android:gravity="center_vertical"
                android:paddingTop="@dimen/dp_8"
                android:text="手机号：  "
                android:textColor="@color/black_87" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dp_12">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_identity"
                android:drawablePadding="@dimen/dp_6"
                android:gravity="center_vertical"
                android:text="市民卡"
                android:textColor="@color/black_87" />

            <TextView
                android:id="@+id/citizen_card_id"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:drawableEnd="@drawable/ic_go_black"
                android:drawablePadding="8dp"
                android:gravity="center_vertical|end"
                android:hint="请添加市民卡号" />
        </LinearLayout>

        <include layout="@layout/common_line_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dp_12">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/dizhi"
                android:drawablePadding="@dimen/dp_6"
                android:gravity="center_vertical"
                android:text="家庭住址"
                android:textColor="@color/black_87" />

            <TextView
                android:id="@+id/family_address_id"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:drawableEnd="@drawable/ic_go_black"
                android:drawablePadding="8dp"
                android:gravity="center_vertical|end"
                android:hint="请填写家庭住址" />
        </LinearLayout>

        <include layout="@layout/common_line_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dp_12">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/minzu"
                android:drawablePadding="@dimen/dp_6"
                android:gravity="center_vertical"
                android:text="民族"
                android:textColor="@color/black_87" />

            <TextView
                android:id="@+id/ethnic_id"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:drawableEnd="@drawable/ic_go_black"
                android:drawablePadding="8dp"
                android:gravity="center_vertical|end"
                android:hint="请选择民族" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/remove_member"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_gravity="bottom"
            android:background="@color/red_100"
            android:gravity="center"
            android:text="关系解除"
            android:textColor="@color/white_100"
            android:textSize="18sp" />
    </FrameLayout>
</LinearLayout>
