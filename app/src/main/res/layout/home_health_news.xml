<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dp_12">

    <LinearLayout
        android:id="@+id/news_item1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/news_cover1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/rc_image_error"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/news_title1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_weight="2" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/news_item2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="@dimen/dp_12"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/news_cover2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/rc_image_error"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/news_cover3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_6"
            android:layout_weight="1"
            android:background="@drawable/rc_image_error"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/news_cover4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_6"
            android:layout_weight="1"
            android:background="@drawable/rc_image_error"
            android:scaleType="fitXY" />

    </LinearLayout>

    <TextView
        android:id="@+id/news_title2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_6"
        android:ellipsize="end"
        android:lines="2" />
</LinearLayout>