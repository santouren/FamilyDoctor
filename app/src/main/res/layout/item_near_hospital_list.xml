<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="12dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/img_hospital_default" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/hospital_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="余杭区第一人民医院"
                android:textColor="@color/black_87"
                android:textSize="@dimen/subhead" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="电话：0571-83927892" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_orange_border_transparent_content"
                android:paddingBottom="2dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="2dp"
                android:text="三级甲等"
                android:textColor="@color/orangeA700"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_location_yellow"
        android:drawablePadding="8dp"
        android:padding="12dp"
        android:text="浙江省杭州市余杭区安乐街道99号" />

    <include layout="@layout/common_line_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.cpinfo.familydoctor.widget.DrawableTextView
            android:id="@+id/map_navigation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="6dp"
            android:gravity="center"
            android:padding="12dp"
            android:text="地图导航"
            app:leftDrawable="@drawable/ic_location"
            app:leftDrawableHeight="12dp"
            app:leftDrawableWidth="12dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/grey300" />

        <com.cpinfo.familydoctor.widget.DrawableTextView
            android:id="@+id/order_diagnosis"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="6dp"
            android:gravity="center"
            android:padding="12dp"
            android:text="预约诊疗"
            app:leftDrawable="@drawable/ic_hospital_blue"
            app:leftDrawableHeight="12dp"
            app:leftDrawableWidth="12dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/grey300" />

        <com.cpinfo.familydoctor.widget.DrawableTextView
            android:id="@+id/hospital_circum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="6dp"
            android:gravity="center"
            android:padding="12dp"
            android:text="医院周边"
            app:leftDrawable="@drawable/ic_guide"
            app:leftDrawableHeight="12dp"
            app:leftDrawableWidth="12dp" />
    </LinearLayout>

    <include layout="@layout/common_line_horizontal" />
</LinearLayout>