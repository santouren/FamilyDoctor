<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp_6">

        <ImageView
            android:id="@+id/team_img"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginEnd="@dimen/dp_12"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_weight="1"
            android:background="@drawable/ic_default_doctor_portrait"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/team_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="李国豪"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/doctor_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="家庭医生 | 1名" />

            <TextView
                android:id="@+id/nurse_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="预防保健人员及护士 | 2名" />

            <TextView
                android:id="@+id/team_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="3"
                android:text="暂无团队简介..." />

            <TextView
                android:id="@+id/on_off"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="展开 ↓"
                android:textColor="@color/blue_87"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/common_bar" />
</LinearLayout>