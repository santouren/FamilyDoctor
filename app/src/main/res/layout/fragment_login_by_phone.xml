<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey200"
    android:orientation="vertical">

    <EditText
        android:id="@+id/et_phone"
        style="@style/register_et_style"
        android:drawableLeft="@drawable/phone_icon"
        android:hint="请输入手机号"
        android:inputType="phone"
        android:maxLength="11"
        android:textSize="@dimen/subhead" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/dp_8">

        <EditText
            android:id="@+id/et_verification"
            style="@style/register_et_style"
            android:layout_width="0dp"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:background="@drawable/left_circular_corner_white"
            android:drawableLeft="@drawable/verification_icon"
            android:hint="请输入验证码"
            android:inputType="number"
            android:maxLength="6"
            android:textSize="@dimen/subhead" />

        <TextView
            android:id="@+id/tv_get_verification"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/right_circular_corner_blue"
            android:gravity="center"
            android:inputType="number"
            android:padding="@dimen/dp_10"
            android:text="获取验证码"
            android:textColor="@color/white" />
    </LinearLayout>

    <Button
        android:id="@+id/login"
        style="@style/primary_btn_style"
        android:text="登录" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="没有账号，" />

        <TextView
            android:id="@+id/go_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:padding="10dp"
            android:text="立即注册>>"
            android:textColor="@color/blueA400" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/retrieve_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="end"
            android:text="找回密码"
            android:textColor="@color/blueA400" />
    </LinearLayout>
</LinearLayout>