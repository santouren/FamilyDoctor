<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.cpinfo.familydoctor.widget.DrawableTextView
                android:id="@+id/hospital_choose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:drawablePadding="8dp"
                android:padding="8dp"
                android:text="淳安县第一人民医院"
                android:textColor="@color/black_87"
                android:textSize="@dimen/subhead"
                app:rightDrawable="@drawable/ic_pull_down_black"
                app:rightDrawableHeight="8dp"
                app:rightDrawableWidth="14dp" />

            <com.youth.banner.Banner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="170dp" />

            <include layout="@layout/common_bar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:background="@drawable/bg_blue_border_transparent_content"
                android:paddingBottom="2dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="2dp"
                android:text="二级甲等"
                android:textColor="@color/blue_100"
                android:textSize="10sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="12dp"
                android:drawableLeft="@drawable/ic_location_yellow"
                android:drawablePadding="6dp"
                android:text="千岛湖镇环湖北路1869号" />

            <include layout="@layout/common_line_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.cpinfo.familydoctor.widget.DrawableTextView
                    android:id="@+id/map_navigation"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawablePadding="6dp"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="地图导航"
                    app:leftDrawable="@drawable/ic_location"
                    app:leftDrawableHeight="12dp"
                    app:leftDrawableWidth="12dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey300" />

                <com.cpinfo.familydoctor.widget.DrawableTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawablePadding="6dp"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="院内导航"
                    app:leftDrawable="@drawable/ic_hospital_blue"
                    app:leftDrawableHeight="12dp"
                    app:leftDrawableWidth="12dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey300" />

                <com.cpinfo.familydoctor.widget.DrawableTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawablePadding="6dp"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="医院周边"
                    app:leftDrawable="@drawable/ic_guide"
                    app:leftDrawableHeight="12dp"
                    app:leftDrawableWidth="12dp" />
            </LinearLayout>

            <include layout="@layout/common_line_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/specialist"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableRight="@drawable/ic_specialist1"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="省市专家"
                    android:textColor="@color/black_87"
                    android:textSize="@dimen/subhead" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey300" />

                <TextView
                    android:id="@+id/feature_department"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableRight="@drawable/ic_department"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="特色科室"
                    android:textColor="@color/black_87"
                    android:textSize="@dimen/subhead" />

            </LinearLayout>

            <include layout="@layout/common_line_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/report_query"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableRight="@drawable/ic_report_query"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="报告查询"
                    android:textColor="@color/black_87"
                    android:textSize="@dimen/subhead" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey300" />

                <TextView
                    android:id="@+id/visited_history"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableRight="@drawable/ic_visited_history"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="就医记录"
                    android:textColor="@color/black_87"
                    android:textSize="@dimen/subhead" />

            </LinearLayout>

            <include layout="@layout/common_bar" />

            <TextView
                android:id="@+id/hospital_guide"
                style="@style/tv_style_1"
                android:drawableLeft="@drawable/ic_guide1"
                android:text="医院介绍" />

            <TextView
                android:id="@+id/department_introduce"
                style="@style/tv_style_1"
                android:drawableLeft="@drawable/ic_department1"
                android:text="科室介绍" />

            <TextView
                android:id="@+id/doctor_introduce"
                style="@style/tv_style_1"
                android:drawableLeft="@drawable/ic_user1"
                android:text="医生介绍" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
